# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=email-validator:

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_validator
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_BASIC_TIER=1000
RATE_LIMIT_PREMIUM_TIER=10000

# Validation Configuration
DEFAULT_VALIDATION_TIMEOUT=10000
MAX_VALIDATION_TIMEOUT=30000
SMTP_TIMEOUT=10000
DNS_TIMEOUT=5000

# Cache Configuration
CACHE_DNS_TTL=3600
CACHE_MX_TTL=3600
CACHE_DISPOSABLE_TTL=86400

# SMTP Configuration
SMTP_FROM_EMAIL=verify@yourdomain.com
SMTP_FROM_NAME=Email Validator
SMTP_MAX_CONNECTIONS=5

# Disposable Email Domains
DISPOSABLE_DOMAINS_URL=https://raw.githubusercontent.com/disposable/disposable-email-domains/master/domains.txt
DISPOSABLE_DOMAINS_UPDATE_INTERVAL=86400000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=logs

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Security
CORS_ORIGIN=*
API_KEY_HEADER=X-API-Key
TRUST_PROXY=false

# Batch Processing
MAX_BATCH_SIZE=100
BATCH_CONCURRENCY=10
